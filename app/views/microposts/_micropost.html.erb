<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
  </span>
  <div>
  <span id="like_score">
    Likes: <%= micropost.likes.size %>
  </span>
  <span class="col-md-2">
    <%= form_tag micropost_likes_path(micropost), remote: true do %>
      <%= submit_tag 'Like', class: "btn btn-primary btn-sm" %>
    <% end %>
  </span>
  </div>
  <section>
    <% if current_user?(micropost.user) %>
      <%= link_to "delete", micropost, method: :delete,
                                       data: { confirm: "You sure?" } %>
    <% end %>
  </section>
  <section>
    <%= render micropost.comments %>
  </section>
  <section>
      <%= form_for [micropost, Comment.new] do |f| %>

      <%= f.text_area :content, placeholder: 'Comment...' %>
      <%= f.submit "Add Comment", class: "btn btn-primary btn-sm" %>
    <% end %>
  </section>
</li>
