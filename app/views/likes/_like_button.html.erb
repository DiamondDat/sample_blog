<% if like = current_user.like.find_by(micropost_id: micropost.id) %>
  <%= form_for(like, html: { method: :delete }, remote: true) do |f| %>
    <%= f.submit "Liked", class: "btn btn-primary btn-sm" %>
  <% end %>
  <% else %>
    <%= form_for(current_user.like.create(micropost_id: micropost.id),
                 remote: true) do |f| %>
      <% f.hidden_field :micropost_id %>
      <% f.hidden_field :user_id %>
      <% f.submit "Like", class: "btn btn-primary btn-sm" %>
    <% end %>
  <% end %>
